@model StudentManagementSystem.Models.ViewModels.StudentVM

<form method="post" asp-action="DeletePost">
    <input asp-for="Student.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Student</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Student.Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Student.Course"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="BranchName"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Student.Name" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Student.Course" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="BranchName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial" />}
}