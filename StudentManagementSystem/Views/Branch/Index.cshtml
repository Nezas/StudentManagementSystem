@model IEnumerable<StudentManagementSystem.Models.Branch>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Branch List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Branch" asp-action="Create" class="btn btn-success">Create new branch</a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Students</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var branch in Model)
                {
                    <tr>
                        <td width="50%">@branch.Name</td>
                        <td width="5%" class="text-center">@branch.StudentsCount</td>
                        <td width="45%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Branch" asp-action="Update" asp-route-Id="@branch.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Branch" asp-action="Delete" asp-route-Id="@branch.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No branches created yet!</p>
    }
</div>
